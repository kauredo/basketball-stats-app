{
  "name": "basketball-stats-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared",
    "web/basketball-stats-web",
    "mobile/BasketballStatsMobile"
  ],
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck && npm run typecheck:convex",
    "typecheck:convex": "tsc --noEmit -p convex/tsconfig.json",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "test": "npm run test --workspace=@basketball-stats/shared && npm run test --workspace=basketball-stats-web && npm run test --workspace=basketballstatsmobile && npm run test:convex",
    "test:convex": "vitest run --config convex/vitest.config.ts",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "full_check": "npm run typecheck && npm run lint && npm run format && npm run test"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "convex": "^1.31.5",
    "convex-test": "^0.0.41",
    "prettier": "^3.8.0",
    "turbo": "^2.7.4",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.90",
    "typescript": "^5.9.3",
    "web-push": "^3.6.7"
  },
  "overrides": {
    "nativewind": {
      "tailwindcss": "3.2.7"
    },
    "tailwindcss": "3.2.7"
  },
  "packageManager": "npm@10.9.2"
}
