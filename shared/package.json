{
  "name": "@basketball-stats/shared",
  "version": "2.0.0",
  "description": "Shared types, components and utilities for basketball stats app",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "basketball",
    "stats",
    "react",
    "react-native",
    "typescript",
    "convex"
  ],
  "author": "Basketball Stats Team",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "tslib": "^2.8.1"
  }
}
