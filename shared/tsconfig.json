{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    /* Build output settings for the shared package */
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "importHelpers": false,
    /* Use modern bundler resolution (TS 5.x) */
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "src/services/bak/**/*"]
}
